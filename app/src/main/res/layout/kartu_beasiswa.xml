<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/colorOrange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:src="@drawable/pnp"></ImageView>

            <TextView
                android:id="@+id/txtJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/vbold"
                android:gravity="center"
                android:src="@drawable/pnp"
                android:text="@string/data_beasiswa_sd_30"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"></TextView>
        </LinearLayout>
        <View
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorBlack" />
        <TableLayout
            android:layout_margin="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>

                <TextView
                    android:id="@+id/idBeasiswa"
                    android:fontFamily="@font/vregular"
                    android:text="Id Beasiswa"
                    android:textColor="@color/colorBlack"></TextView>
                <TextView
                    android:text=" : "></TextView>

                <TextView
                    android:id="@+id/txtIdBeasiswa"
                    android:fontFamily="@font/vregular"
                    android:text="Id Beasiswa"
                    android:textColor="@color/colorBlack"></TextView>
            </TableRow>
            <TableRow>

                <TextView
                    android:id="@+id/beasiswa"
                    android:fontFamily="@font/vregular"
                    android:text="@string/beasiswa"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView android:text="1"></TextView>

                <TextView
                    android:id="@+id/txtJenisBeasiswa1"
                    android:fontFamily="@font/vregular"
                    android:text="Jenis Beasiswa 1"
                    android:textColor="@color/colorBlack"></TextView>
            </TableRow>
            <TableRow>

                <TextView
                    android:fontFamily="@font/vregular"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView></TextView>

                <TextView
                    android:id="@+id/txtKeterangan1"
                    android:fontFamily="@font/vregular"
                    android:text="Keterangan 1"
                    android:textColor="@color/colorBlack"></TextView>
            </TableRow>
            <TableRow>

                <TextView
                    android:fontFamily="@font/vregular"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView></TextView>

                <TextView
                    android:id="@+id/txtTahunMulai1"
                    android:fontFamily="@font/vregular"
                    android:text="Tahun Mulai 1"
                    android:textColor="@color/colorBlack"></TextView>
            </TableRow>
            <TableRow>

                <TextView
                    android:fontFamily="@font/vregular"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView></TextView>

                <TextView
                    android:id="@+id/txtTahunSelesai1"
                    android:fontFamily="@font/vregular"
                    android:text="Tahun Selesai 1"
                    android:textColor="@color/colorBlack"></TextView>
            </TableRow>
            <TableRow>

                <TextView
                    android:fontFamily="@font/vregular"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView android:text="2"></TextView>

                <TextView
                    android:id="@+id/txtJenisBeasiswa2"
                    android:fontFamily="@font/vregular"
                    android:text="Jenis Beasiswa 2"
                    android:textColor="@color/colorBlack"></TextView>
            </TableRow>
            <TableRow>

                <TextView
                    android:fontFamily="@font/vregular"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView></TextView>

                <TextView
                    android:id="@+id/txtKeterangan2"
                    android:fontFamily="@font/vregular"
                    android:text="Keterangan 2"
                    android:textColor="@color/colorBlack"></TextView>
            </TableRow>
            <TableRow>

                <TextView
                    android:fontFamily="@font/vregular"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView></TextView>

                <TextView
                    android:id="@+id/txtTahunMulai2"
                    android:fontFamily="@font/vregular"
                    android:text="Tahun Mulai 2"
                    android:textColor="@color/colorBlack"></TextView>
            </TableRow>
            <TableRow>

                <TextView
                    android:fontFamily="@font/vregular"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView></TextView>

                <TextView
                    android:id="@+id/txtTahunSelesai2"
                    android:fontFamily="@font/vregular"
                    android:text="Tahun Selesai 2"
                    android:textColor="@color/colorBlack"></TextView>
            </TableRow>
            <TableRow>

                <TextView
                    android:fontFamily="@font/vregular"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView android:text="3"></TextView>

                <TextView
                    android:id="@+id/txtJenisBeasiswa3"
                    android:fontFamily="@font/vregular"
                    android:text="Jenis Beasiswa 3"
                    android:textColor="@color/colorBlack"></TextView>
            </TableRow>
            <TableRow>

                <TextView
                    android:fontFamily="@font/vregular"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView></TextView>

                <TextView
                    android:id="@+id/txtKeterangan3"
                    android:fontFamily="@font/vregular"
                    android:text="Keterangan 3"
                    android:textColor="@color/colorBlack"></TextView>
            </TableRow>
            <TableRow>

                <TextView
                    android:fontFamily="@font/vregular"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView></TextView>

                <TextView
                    android:id="@+id/txtTahunMulai3"
                    android:fontFamily="@font/vregular"
                    android:text="Tahun Mulai 3"
                    android:textColor="@color/colorBlack"></TextView>
            </TableRow>
            <TableRow>

                <TextView
                    android:fontFamily="@font/vregular"
                    android:textColor="@color/colorBlack"></TextView>

                <TextView></TextView>

                <TextView
                    android:id="@+id/txtTahunSelesai3"
                    android:fontFamily="@font/vregular"
                    android:text="Tahun Selesai 3"
                    android:textColor="@color/colorBlack"></TextView>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>