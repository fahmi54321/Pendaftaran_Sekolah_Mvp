<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    tools:context=".view.DataBeasiswaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtBeasiswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/vregular"
                    android:text="@string/beasiswa"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/idUser"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/vregular"
                    android:text="@string/beasiswa"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/spinnerJenisPrestasi1"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bttn_input"
                                android:ems="10"
                                android:textSize="14sp"
                                android:fontFamily="@font/vregular"
                                android:entries="@array/jenis_beasiswa"
                                android:inputType="text"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edtKeterangan1"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bttn_input"
                                android:ems="10"
                                android:textSize="14sp"
                                android:hint="Keterangan"
                                android:fontFamily="@font/vregular"
                                android:inputType="text"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edtTahunMulai1"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bttn_input"
                                android:ems="10"
                                android:textSize="14sp"
                                android:hint="Tahun Mulai"
                                android:fontFamily="@font/vregular"
                                android:inputType="text"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edtTahunSelesai1"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bttn_input"
                                android:ems="10"
                                android:textSize="14sp"
                                android:hint="Tahun Selesai"
                                android:fontFamily="@font/vregular"
                                android:inputType="text"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack" />

                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/spinnerJenisPrestasi2"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bttn_input"
                                android:ems="10"
                                android:textSize="14sp"
                                android:fontFamily="@font/vregular"
                                android:entries="@array/jenis_beasiswa"
                                android:inputType="text"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edtKeterangan2"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bttn_input"
                                android:ems="10"
                                android:textSize="14sp"
                                android:hint="Keterangan"
                                android:fontFamily="@font/vregular"
                                android:inputType="text"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edtTahunMulai2"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bttn_input"
                                android:ems="10"
                                android:textSize="14sp"
                                android:hint="Tahun Mulai"
                                android:fontFamily="@font/vregular"
                                android:inputType="text"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edtTahunSelesai2"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bttn_input"
                                android:ems="10"
                                android:textSize="14sp"
                                android:hint="Tahun Selesai"
                                android:fontFamily="@font/vregular"
                                android:inputType="text"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack" />

                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/spinnerJenisPrestasi3"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bttn_input"
                                android:ems="10"
                                android:textSize="14sp"
                                android:fontFamily="@font/vregular"
                                android:entries="@array/jenis_beasiswa"
                                android:inputType="text"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edtKeterangan3"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bttn_input"
                                android:ems="10"
                                android:textSize="14sp"
                                android:hint="Keterangan"
                                android:fontFamily="@font/vregular"
                                android:inputType="text"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edtTahunMulai3"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bttn_input"
                                android:ems="10"
                                android:textSize="14sp"
                                android:hint="Tahun Mulai"
                                android:fontFamily="@font/vregular"
                                android:inputType="text"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/edtTahunSelesai3"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/bttn_input"
                                android:ems="10"
                                android:textSize="14sp"
                                android:hint="Tahun Selesai"
                                android:fontFamily="@font/vregular"
                                android:inputType="text"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack" />

                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/ketJenisPrestasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/vlight"
                    android:text="Jenis Beasiswa : Jenis beasiswa yang pernah diterima oleh peserta didik"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/ketKeterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/vlight"
                    android:text="Keterangan : Keterangan terkait beasiswa yang pernah diterima oleh peserta didik. Misalnya dapat diisi dengan nama beasiswa, seperti Beasiswa Murid Berprestasi Tahun 2017, atau keterangan lain yang relevan"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/ketTahunMulai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/vlight"
                    android:text="Tahun Mulai : Tahun mulai diterimanya beasiswa oleh peserta didik"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/ketTahunSelesai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/vlight"
                    android:text="Tahun Selesai : Tahun selesai diterimanya beasiswa oleh peserta didik. Apabila beasiswa tersebut hanya diterima sekali dalam tahun yang sama, maka diisi sama seperti Tahun Mulai"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/bttnSimpan"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bttn_sign"
                    android:ems="10"
                    android:fontFamily="@font/vbold"
                    android:inputType="textPersonName"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/simpan"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="18sp" />
            </LinearLayout>

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.93" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>